<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#9F160FE1"
    tools:context=".views.activities.SignUpActivity">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/name_top_guideline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.15"
        android:orientation="horizontal"
        />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/name_bottom_guideline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.15"
        android:orientation="horizontal"
        />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/email_top_guideline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.28"
        android:orientation="horizontal"
        />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/password_top_guideline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.41"
        android:orientation="horizontal"
        />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/dob_guideline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.54"
        android:orientation="horizontal"
        />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/register_guideline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.75"
        android:orientation="horizontal"
        />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/editText_left"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.1"
        android:orientation="vertical"
        />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/editText_right"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.9"
        android:orientation="vertical"
        />
    <TextView
        android:id="@+id/email_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/email_top_guideline"
        app:layout_constraintStart_toStartOf="@id/name_edittext"
        android:layout_marginBottom="5dp"
        android:paddingTop="5dp"
        android:textColor="@color/white"
        android:layout_marginStart="5dp"
        android:fontFamily="@font/abeezee"
        android:text="Enter Email"
        />
    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/name_edittext"
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        android:fontFamily="@font/abeezee"
        app:layout_constraintTop_toBottomOf="@id/name_textView"
        app:layout_constraintStart_toStartOf="@id/editText_left"
        app:layout_constraintEnd_toEndOf="@id/editText_right"
        android:layout_marginTop="5dp"
        android:paddingBottom="15dp"
        android:paddingTop="15dp"
        android:hint="Name"

        android:background="@color/white"
        style="@style/Widget.Material3.TextInputLayout.FilledBox.Dense"
        />

    <TextView
        android:id="@+id/name_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/name_top_guideline"
        app:layout_constraintStart_toStartOf="@id/name_edittext"
        android:textColor="@color/white"
        android:layout_marginStart="5dp"
        android:paddingTop="5dp"
        android:fontFamily="@font/abeezee"
        android:text="Enter Name"
        />
    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/email_edittext"
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        android:fontFamily="@font/abeezee"
        app:layout_constraintTop_toBottomOf="@+id/email_textView"
        app:layout_constraintStart_toStartOf="@id/editText_left"
        app:layout_constraintEnd_toEndOf="@id/editText_right"
        android:layout_marginTop="5dp"
        android:paddingBottom="15dp"
        android:paddingTop="15dp"
        android:hint="Email Address"
        android:background="#FFFFFF"
        style="@style/Widget.Material3.TextInputLayout.FilledBox.Dense"

        />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/password_edittext"
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        android:fontFamily="@font/abeezee"
        app:layout_constraintTop_toBottomOf="@id/password_textView"
        app:layout_constraintStart_toStartOf="@id/editText_left"
        app:layout_constraintEnd_toEndOf="@id/editText_right"
        android:layout_marginTop="5dp"
        android:paddingBottom="15dp"
        android:paddingTop="15dp"
        android:inputType="textPassword"
        android:hint="Password"
        android:background="#FFFFFF"
        style="@style/Widget.Material3.TextInputLayout.FilledBox.Dense"

        />

    <TextView

        android:id="@+id/password_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:layout_constraintTop_toTopOf="@id/password_top_guideline"
        app:layout_constraintStart_toStartOf="@id/name_edittext"
        android:paddingTop="5dp"
        android:layout_marginStart="5dp"
        android:textColor="@color/white"
        android:fontFamily="@font/abeezee"
        android:text="Enter Password"

        />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/dob_edittext"
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        android:fontFamily="@font/abeezee"
        app:layout_constraintTop_toBottomOf="@id/dob_textView"
        app:layout_constraintStart_toStartOf="@id/editText_left"
        app:layout_constraintEnd_toEndOf="@id/editText_right"
        android:layout_marginTop="5dp"
        android:paddingBottom="15dp"
        android:paddingTop="15dp"
        android:inputType="date"
        android:hint="Date Of Birth"
        android:background="#FFFFFF"
        style="@style/Widget.Material3.TextInputLayout.FilledBox.Dense"

        />

    <TextView
        android:id="@+id/dob_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/dob_guideline"
        app:layout_constraintStart_toStartOf="@id/name_edittext"
        android:paddingTop="5dp"
        android:layout_marginStart="5dp"
        android:textColor="@color/white"

        android:fontFamily="@font/abeezee"
        android:text="Enter Date of Birth"
        />
    <com.google.android.material.button.MaterialButton
        android:id="@+id/registerButton3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="15dp"

        android:letterSpacing="0.03"
        android:backgroundTint="#FFFFFF"
        android:fontFamily="sans-serif-smallcaps"
        android:text="Create  Account"
        android:textColor="@color/colorPrimary"
        android:textSize="18sp"
        android:textStyle="bold"
        app:cornerRadius="10dp"
        app:layout_constraintTop_toBottomOf="@id/register_guideline"
        app:layout_constraintEnd_toEndOf="@id/editText_right"
        app:layout_constraintStart_toStartOf="@id/editText_left" />
</androidx.constraintlayout.widget.ConstraintLayout>